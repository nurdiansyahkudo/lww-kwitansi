<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template for Kwitansi -->
        <template id="pratama_po_template">
            <t t-call="web.external_layout">
                <t t-foreeach="docs" t-as="o">
                    <!-- Header Section -->
                    <div class="row" style="border-bottom: 2px solidrgb(0, 10, 148);">
                        <div class="col-6" style="height: 150px; display: flex; flex-direction: column; justify-content: center;">
                            <div class="text" style="font-size: 30px; text-align: center; padding-left: 2.5rem; padding-top: 50px;">
                                <h1 style="font-size: 2rem;">
                                    PURCHASE ORDER
                                </h1>
                            </div>
                        </div>
                        <div class="col-6">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()" 
                            style="max-width: 350px; height: auto;" />
                            <div style="font-size: 12px; line-height: 1.5; text-align: left;">
                                <p>
                                    <span t-esc="o.company_id.street"/> <br/>
                                    <span t-esc="o.company_id.city"/> <span t-esc="o.company_id.zip"/> <br/>
                                    <span t-esc="o.company_id.phone"/>,
                                    <span t-esc="o.company_id.mobile"/>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Main Section -->
                    <main>

                    </main>
                </t>
            </t>
        </template>

            <!-- Wrapper Template -->
            <template id="lww_po">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="lww_po_template" t-lang="o.partner_id.lang"/>
                    </t>
                </t>
            </template>
        </data>
    </odoo>