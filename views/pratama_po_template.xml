<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template for Kwitansi -->
        <template id="pratama_po_template">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <!-- Header Section -->
                    <div class="row" style="border-bottom: 2px solid rgb(0, 67, 167);">
                        <div class="col-12">
                            <!-- Company Logo and Address -->
                            <div style="display: flex; align-items: center;">
                                <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()" 
                                     style="max-width: 150px; height: auto; margin-right: 20px;"/>
                                <div style="font-size: 12px; line-height: 1.5;">
                                    <p>
                                        <span t-esc="o.company_id.street"/><br/>
                                        <span t-esc="o.company_id.city"/> - <span t-esc="o.company_id.zip"/>, 
                                        <span t-esc="o.company_id.country_id.name"/><br/>
                                        Telp. <span t-esc="o.company_id.phone"/><br/>
                                        Fax. <span t-esc="o.company_id.mobile"/>
                                    </p>
                                </div>
                            </div>
                            <!-- Purchase Order Title -->
                            <div style="text-align: center; margin-top: 20px;">
                                <h1 style="font-size: 2rem;">
                                    <strong>PURCHASE ORDER</strong>
                                </h1>
                                <p style="font-size: 14px;">
                                    Tanggal: <span t-esc="o.date_order.strftime('%d-%b-%Y') if o.date_order else ''"/>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Main Section -->
                    <main>
                        <div class="page" style="padding: 10px;">
                            <!-- Address Section -->
                            <div class="row" style="margin-bottom: 20px; border-bottom: 2px solid blue;">
                                <div class="col-6 text-left">
                                    <strong style="font-size: 16px;">To: </strong>
                                    <div style="font-size: 14px;">
                                        <p><em>Name: </em><span t-esc="o.partner_id.name"/></p>
                                        <p><em>Address: </em><span t-esc="o.partner_id.street"/></p>
                                        <p><em>City: </em><span t-esc="o.partner_id.city"/></p>
                                        <p><em>Region: </em><span t-esc="o.partner_id.state_id.name"/></p>
                                        <p><em>Country: </em><span t-esc="o.partner_id.country_id.name"/></p>
                                        <p><em>Phone: </em><span t-esc="o.partner_id.phone"/></p>
                                        <p><em>Fax: </em><span t-esc="o.partner_id.mobile"/></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Table Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <table class="table table-sm" style="width: 100%; border-collapse: collapse;">
                                    <thead>
                                        <tr>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">No</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Product Name</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Product ID</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Qty</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Price</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Discount</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Currency</th>
                                            <th style="font-size: 14px; text-align: center; border: 1px solid black;">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="counter" t-value="0"/>
                                        <t t-foreach="o.order_line" t-as="line">
                                            <t t-set="counter" t-value="counter + 1"/>
                                            <tr>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="counter"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="line.product_id.name"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="line.product_id.default_code"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="int(line.product_qty)"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="'{:,.2f}'.format(line.price_unit)"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="int(line.discount)"/>%</td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="o.currency_id.name"/></td>
                                                <td style="font-size: 14px; text-align: center; border: 1px solid black;"><span t-esc="'{:,.2f}'.format(line.price_subtotal)"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Total Section -->
                            <div class="row" style="margin-bottom: 20px; border-bottom: 2px solid blue;">
                                <div class="col-8"></div>
                                <div class="col-4">
                                    <p style="text-align: right; font-size: 14px;">
                                        <em>Sub Total: </em><span t-esc="'{:,.2f}'.format(o.amount_untaxed)"/><br/>
                                        <em>Discount: </em><span t-esc="'{:,.2f}'.format(o.amount_discount)"/><br/>
                                        <em>Total: </em><span t-esc="'{:,.2f}'.format(o.amount_total - o.amount_tax)"/><br/>
                                        <em>Tax: </em><span t-esc="'{:,.2f}'.format(o.amount_tax)"/><br/>
                                        <em>Grand Total: </em><span t-esc="'{:,.2f}'.format(o.amount_total)"/><br/>
                                    </p>
                                </div>
                            </div>

                            <!-- Signature Section -->
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-6">
                                    <p style="text-align: center; font-size: 14px;">Tanda Tangan Penerima:</p>
                                    <div style="border-bottom: 1px solid black; width: 50%; margin: 0 auto;"></div>
                                </div>
                                <div class="col-6">
                                    <p style="text-align: center; font-size: 14px;">Tanda Tangan Pengirim:</p>
                                    <div style="border-bottom: 1px solid black; width: 50%; margin: 0 auto;"></div>
                                </div>
                            </div>
                        </div>
                    </main>
                </t>
            </t>
        </template>

        <!-- Wrapper Template -->
        <template id="pratama_po">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="pratama_po_template" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>